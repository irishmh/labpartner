<h1>Listing faces</h1>

<table>
  <tr>
    <th>Eye color</th>
    <th>Hair color</th>
    <th>Ears</th>
  </tr>

<% @faces.each do |face| %>
  <tr>
    <td><%=h face.eye_color %></td>
    <td><%=h face.hair_color %></td>
    <td><%=h face.ears %></td>
    <td><%= link_to 'Show', face %></td>
    <td><%= link_to 'Edit', edit_face_path(face) %></td>
    <td><%= link_to 'Destroy', face, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New face', new_face_path %>